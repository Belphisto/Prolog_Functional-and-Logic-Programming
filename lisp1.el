; Функция вычисления факториала
(defun factorial (n)
  (if (= n 0)
      1
      (* n (factorial (- n 1)))))

; Число для вычисления факторила = 5
(setf number 5)

; Вызов функции вычисления факториала и вывод результата
(format t "Факториал ~a равен ~a" number (factorial number))
